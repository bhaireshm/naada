{
  "name": "@bhaireshm/music-player",
  "version": "1.0.0",
  "private": true,
  "description": "Online Music Player - Monorepo",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:backend\" \"pnpm:dev:frontend\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "start": "concurrently \"pnpm:start:backend\" \"pnpm:start:frontend\"",
    "start:backend": "pnpm --filter backend start",
    "start:frontend": "pnpm --filter frontend start",
    "lint": "pnpm --filter backend lint && pnpm --filter frontend lint",
    "lint:fix": "pnpm --filter backend lint:fix"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
